@model ApproveOrRejectProposalEditModel
@{
    ViewData["page"] = "";
    ViewData["Title"] = "جزئیات پیشنهاد";
    Layout = "Layout";
}

<div class="content-wrapper">
    <section class="content-header">
        <h1 class="wow animate__animated animate__lightSpeedInRight">
            جزئیات پیشنهاد
        </h1>
        <ol class="breadcrumb">
            <li><a href="/Home/Index"><i class="fas fa-home"></i> خانه</a></li>
            <li><a href="#">مدیریت نظام مشارکت</a></li>
            <li class="active">در حال ارزیابی</li>
            <li class="active">جزئیات</li>
        </ol>
    </section>
    <section class="content">
        <div class="row">
            <div class="col-md-12">
                <div class="box wow animate__animated animate__fadeInRight " data-wow-delay=".2s">
                    <div class="box-header with-border">
                        <h3 class="box-title"></h3>

                        <div class="box-tools pull-right">
                            <button type="button" class="btn btn-box-tool" data-widget="collapse" data-toggle="tooltip" title="" data-original-title="Collapse">
                                <i class="fa fa-minus"></i>
                            </button>
                            <button type="button" class="btn btn-box-tool" data-widget="remove" data-toggle="tooltip" title="" data-original-title="Remove">
                                <i class="fa fa-times"></i>
                            </button>
                        </div>
                    </div>
                    <div class="box-body" style="">
                        <form id="form2" method="post" asp-area="Secretary" asp-controller="ApproveOrRejectProposal" asp-action="Index">
                            <input asp-for="ID" style="display:none" />
                            <div class="col-md-12 form-group">
                                <div class="row">
                                    <div class="col-md-9">
                                        <div class="row">
                                            <div class="col-md-2">
                                                <select asp-for="StatusID" id="status" style="height:auto" class="form-control">
                                                    <option value="2">تصویب پیشنهاد</option>
                                                    <option value="8">تأیید و آماده طرح در شورای مرکزی</option>
                                                    <option value="3">رد پیشنهاد</option>

                                                </select>
                                            </div>
                                            <div class="col-md-10">
                                                در صورت انتخاب وضعیت پیشنهاد «تصویب پیشنهاد» در نظر داشته باشید این پیشنهاد از دستور کار تمامی ارزیابان خارج می گردد و این وضعیت قابل بازگشت نمی باشد.
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-12">
                                <div class="row">
                                    <div class="box box-success">
                                        <div class="box-header">
                                            <h3 class="box-title">
                                                توضیحات
                                            </h3>
                                            <!-- tools box -->
                                            <div class="pull-right box-tools">
                                                <label>جملات پیش فرض :</label>
                                                <button type="button" class="btn btn-default btn-sm" data-toggle="tooltip"
                                                        title="پیشنهاد به دلیل تکراری بودن موضوع آن رد می شود.">
                                                    ج 1
                                                </button>
                                            </div>
                                            <!-- /. tools -->
                                        </div>
                                        <!-- /.box-header -->
                                        <div class="box-body pad">
                                            <div>
                                                <textarea asp-for="DesDabir" style="resize:none;width: 100%; height: 100px; font-size: 14px; line-height: 18px; border: 1px solid #dddddd; padding: 10px;"></textarea>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-12">
                                <input type="submit" style="margin:0 auto 0 auto;width:100px;display:block" class="btn btn-success" value="ثبت اطلاعات" />
                            </div>

                        </form>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- /.content -->
</div>
<!--تنظیم جملات پیشفرض-->
<script>
    let buttons = document.querySelectorAll(".pull-right.box-tools > button");
    for (let button of buttons) {
        button.addEventListener('click', (e) => {
            let title = e.target.getAttribute('data-original-title');
            e.target.parentElement.parentElement.parentElement.getElementsByTagName('textarea')[0].value += title;
        });
    }
</script>