@inject IUnitOfWork _uw;
@inject IMapper _mapper
@{
    Form form = _uw.FormRepository.Get(f => f.FormCode == (string)ViewData["id"]).SingleOrDefault();
    DetailsFormViewModel model = _mapper.Map<DetailsFormViewModel>(form);
    ViewData["page"] = "GF";
    ViewData["Title"] = "جزئیات فرم";
    Layout = "Layout";
}
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <h1 class="wow animate__animated animate__lightSpeedInRight">
            دریافت فرم ها
        </h1>
        <ol class="breadcrumb">
            <li><a href="/Home/Index"><i class="ffas fa-home"></i> خانه</a></li>
            <li><a href="#">مدیریت یکپارچه</a></li>
            <li class="active">دریافت فرم ها</li>
        </ol>
    </section>

    <!-- Main content -->
    <section class="content">
        <div class="box">
            <div class="box-header with-border">
                <h4>جزئیات فرم @form.FormCode <a class="btn btn-info" href="/Form/DownloadFrom?id=@form.FormCode">دانلود</a></h4>
            </div>
            <div class="box-body">
                <div style="display:block;width:90%;margin:0 auto 0 auto">
                    <div class="box box-group box-info">
                        <div class="box-header with-border text-center">
                            اطلاعات فرم
                        </div>
                        <div class="box-body">
                            <div class="row text-center"><span style="font-size:20px">کد فرم :</span>&nbsp;&nbsp; @form.FormCode</div>
                            <div class="row text-center"><span style="font-size:20px">نام فرم :</span>&nbsp;&nbsp; @form.FormName</div>
                        </div>
                    </div>
                </div>
                <div style="display:block;width:90%;margin:0 auto 0 auto">
                    <div class="box box-group box-info">
                        <div class="box-header with-border text-center">
                            اطلاعات فرایند در سطح 3
                        </div>
                        <div class="box-body">
                            <div class="row text-center"><span style="font-size:20px">کد فرایند :</span>&nbsp;&nbsp; @form.Level3ProcessCode</div>
                            <div class="row text-center"><span style="font-size:20px">نام فرایند :</span>&nbsp;&nbsp; @form.Level3ProcessName</div>
                        </div>
                    </div>
                </div>
                <div style="display:block;width:90%;margin:0 auto 0 auto">
                    <div class="box box-group box-info">
                        <div class="box-header with-border text-center">
                            اطلاعات فرایند در سطح 4
                        </div>
                        <div class="box-body">
                            <div class="row text-center"><span style="font-size:20px">کد فرایند :</span>&nbsp;&nbsp; @form.Level4ProcessCode</div>
                            <div class="row text-center"><span style="font-size:20px">نام فرایند :</span>&nbsp;&nbsp; @form.Level4ProcessName</div>
                        </div>
                    </div>
                </div>
                <div style="display:block;width:90%;margin:0 auto 0 auto">
                    <div class="box box-group box-info">
                        <div class="box-header with-border text-center">
                            اطلاعات مدرک
                        </div>
                        <div class="box-body">
                            <div class="row text-center"><span style="font-size:20px">نام اداره :</span>&nbsp;&nbsp; @form.OfficeName</div>
                            <div class="row text-center"><span style="font-size:20px">کد مدرک :</span>&nbsp;&nbsp; @form.DocumentCode</div>
                            <div class="row text-center"><span style="font-size:20px">نام مدرک :</span>&nbsp;&nbsp; @form.DocumentName</div>
                            <div class="row text-center"><span style="font-size:20px">نوع مدرک :</span>&nbsp;&nbsp; @form.DocumentType</div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- /.content -->
</div>
